# Development configuration with relaxed settings
replicaCount: 1  # Single replica for development

image:
  repository: ghcr.io/stefanprodan/podinfo
  tag: 6.5.0
  pullPolicy: IfNotPresent

# Resource requests and limits (relaxed for development)
resources:
  requests:
    cpu: 50m
    memory: 32Mi
  limits:
    cpu: 100m
    memory: 64Mi

# Liveness and readiness probes with longer timeouts
livenessProbe:
  path: /healthz
  port: http
  initialDelaySeconds: 10
  periodSeconds: 15
  timeoutSeconds: 5
  successThreshold: 1
  failureThreshold: 3

readinessProbe:
  path: /readyz
  port: http
  initialDelaySeconds: 5
  periodSeconds: 15
  timeoutSeconds: 5
  successThreshold: 1
  failureThreshold: 3

# Enable metrics for Prometheus
metrics:
  enabled: true
  serviceMonitor:
    enabled: true

# Disable HPA in development
hpa:
  enabled: false

# Enable debug mode
debug:
  enabled: true

# Development-specific environment variables
env:
  - name: ENVIRONMENT
    value: "development"
  - name: LOG_LEVEL
    value: "debug"

# Development ingress configuration
ingress:
  enabled: true
  className: nginx
  hosts:
    - host: podinfo-dev.app.local
      paths:
        - path: /
          pathType: Prefix
  tls: []  # Disable TLS in development by default
